<div class="bg-white shadow overflow-hidden sm:rounded-lg p-14">
    <div class="px-4 py-5 sm:px-6">
        <div>
            {{>conditionsCalculations}}

            <span class="block text-base text-center text-indigo-600
          font-semibold tracking-wide uppercase  my-8">Physiological calculations</span>
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Physiological information
            </h3>
            <p class="mt-0 max-w-2xl text-sm text-gray-500">
                Here you can calculate your body mass index, body fat
                percentage, body bone mass, total body fat and total body
                muscle.
            </p>
        </div>
        <div class="mt-5 border-t border-gray-200">
            <dl class="divide-y divide-gray-200">
                <form action="/calculation/{{_id}}/{{weight}}/{{height}}/" method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Body mass index
                        </dt>
                        <input class="mt-4 flex-shrink appearance-none w-8 px-3
                                    py-2 border border-gray-300 rounded-md
                                    shadow-sm placeholder-gray-400
                                    focus:outline-none focus:ring-indigo-500
                                    focus:border-indigo-500 sm:text-sm" type="text" readonly name="bmi" id="bmi"
                            value="{{bmi}}">
                        <button class="mt-4 font-bold flex-shrink appearance-none shadow-sm sm:text-sm bg-white rounded-md font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                            Calculate
                        </button>
                    </div>
                </form>

                <form action="/calculation2/{{_id}}/{{weight}}/" method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Oseous mass
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                    py-2 border border-gray-300 rounded-md
                                    shadow-sm placeholder-gray-400
                                    focus:outline-none focus:ring-indigo-500
                                    focus:border-indigo-500 sm:text-sm" type="text" readonly name="boneWeight"
                            id="boneWeight" value="{{boneWeight}} kg">
                        <button class="mt-4 font-bold flex-shrink appearance-none shadow-sm sm:text-sm bg-white rounded-md font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                            Calculate
                        </button>
                    </div>
                </form>

                <form action="/calculation3/{{_id}}/{{weight}}/{{fatWeight}}/{{boneWeight}}/{{residualWeight}}/"
                    method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Muscle mass
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                    py-2 border border-gray-300 rounded-md
                                    shadow-sm placeholder-gray-400
                                    focus:outline-none focus:ring-indigo-500
                                    focus:border-indigo-500 sm:text-sm" type="text" readonly name="muscleWeight"
                            id="muscleWeight" value="{{muscleWeight}} kg">
                        <button class="mt-4 font-bold flex-shrink appearance-none shadow-sm sm:text-sm bg-white rounded-md font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                            Calculate
                        </button>
                    </div>
                </form>

                <form action="/calculation4/{{_id}}/{{weight}}/{{gender}}" method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Residual mass
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                    py-2 border border-gray-300 rounded-md
                                    shadow-sm placeholder-gray-400
                                    focus:outline-none focus:ring-indigo-500
                                    focus:border-indigo-500 sm:text-sm" type="text" readonly name="residualWeight"
                            id="residualWeight" value="{{residualWeight}} kg">
                        <button class="mt-4 font-bold flex-shrink appearance-none shadow-sm sm:text-sm bg-white rounded-md font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                            Calculate
                        </button>
                    </div>
                </form>

                <form action="/calculation5/{{_id}}/{{weight}}/{{fatPercentage}}/" method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Fat mass
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                    py-2 border border-gray-300 rounded-md
                                    shadow-sm placeholder-gray-400
                                    focus:outline-none focus:ring-indigo-500
                                    focus:border-indigo-500 sm:text-sm" type="text" readonly name="fatWeight"
                            id="fatWeight" value="{{fatWeight}} kg">
                        <button class="mt-4 font-bold flex-shrink appearance-none shadow-sm sm:text-sm bg-white rounded-md font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                            Calculate
                        </button>
                    </div>
                </form>

                <form action="/calculation6/{{_id}}/{{bmi}}/{{age}}/{{gender}}/" method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Fat percentage
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                    py-2 border border-gray-300 rounded-md
                                    shadow-sm placeholder-gray-400
                                    focus:outline-none focus:ring-indigo-500
                                    focus:border-indigo-500 sm:text-sm" type="text" readonly name="fatPercentage"
                            id="fatPercentage" value="{{fatPercentage}} %">
                        <button class="mt-4 font-bold flex-shrink appearance-none shadow-sm sm:text-sm bg-white rounded-md font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                            Calculate
                        </button>
                    </div>
                </form>
            </dl>

            {{>bmiTable}}
            {{>oseusTable}}
            {{>muscleMass}}
            {{>residualMass}}
            {{>fatMass}}
            {{>fatPercentage}}
        </div>
    </div>
</div>