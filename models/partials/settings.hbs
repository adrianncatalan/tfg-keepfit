<div class="bg-white shadow overflow-hidden sm:rounded-lg p-14">
    <div class="px-4 py-5 sm:px-6">
        <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Settings
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
                This is your personal information
            </p>
        </div>

        <div class="mt-5 border-t border-gray-200">
            <dl class="divide-y divide-gray-200">
                <form action="/settingsName/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Name
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{name}}</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="text" name="name" id="name" minlength="3" maxlength="20"
                            placeholder="Update your name" required>

                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsSurname/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Surname
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{surname}}</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="text" name="surname" id="surname" minlength="3" required
                            maxlength="20" placeholder="Update your surname">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsAge/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Age
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{age}} years old</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="number" name="age" id="age" minlength="1" required maxlength="3"
                            placeholder="Update your age">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsGender/{{_id}}" method="POST">
                    <div class="py-4 sm:grid sm:py-5 sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Gender
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{gender}}</p>
                        </dt>

                        <select name="gender" id="gender" class="flex-grow
                                py-3 px-4 block w-full
                                shadow-sm focus:ring-indigo-500
                                focus:border-indigo-500 border-gray-300
                                rounded-md">
                            <option selected value="{{gender}}">{{gender}}</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>

                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsHeight/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Height
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{height}} cm</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="number" name="height" id="height" required minlength="1"
                            maxlength="3" placeholder="Update your height (Enter integer values)">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsWeight/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Weight
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{weight}} kg</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="number" name="weight" id="weight" minlength="1" maxlength="3"
                            required placeholder="Update your weight (Enter integer values)">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsEmail/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Email
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{email}}</p>
                        </dt>
                        <input class="lowercase flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="email" name="email" id="email" minlength="6" required maxlength="50"
                            placeholder="Update your email">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsPhone/{{_id}}" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Phone
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">{{phone}}</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="text" name="phone" id="phone" required min="9" maxlength="15"
                            placeholder="Update your phone">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/settingsPassword/{{_id}}/" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Password
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow font-bold">**********</p>
                        </dt>
                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2
                                border border-gray-300 rounded-md shadow-sm
                                placeholder-gray-400 focus:outline-none
                                focus:ring-indigo-500 focus:border-indigo-500
                                sm:text-sm" type="password" name="password" id="password" required maxlength="20"
                            minlength="6" placeholder="Update your
                                password">
                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/uploadsImgProfile/" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Profile picture
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow w-1/3 font-bold"><img
                                    src="https://c.pxhere.com/photos/d5/a9/dog_labrador_light_brown_pet_hundeportrait_dog_head_in_the_free_profile-655507.jpg!d"
                                    alt="Img profile"></p>{{!-- Aquí
                            va la imagen del profile del usuario--}}
                        </dt>

                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2 border border-gray-300 rounded-md
                                shadow-sm placeholder-gray-400
                                focus:outline-none focus:ring-indigo-500
                                focus:border-indigo-500 sm:text-sm" type="file" name="imgProfile" id="imgProfile">

                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>

                <form action="/uploadImgHeader/" method="POST">
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                        <dt class="text-sm font-medium text-gray-500">
                            Profile header
                        </dt>
                        <dd class="mt-1 flex text-sm text-gray-900 sm:mt-0
                            sm:col-span-2">
                        <dt class="text-xl font-medium text-gray-500">
                            <p class="flex-grow w-1/3 font-bold"><img
                                    src="https://c.pxhere.com/photos/64/e6/chicago_usa_america_united_states_city_skyscrapers_ocean_building-744301.jpg!d"
                                    alt="Img header"></p>{{!-- Aquí
                            va la imagen del header del usuario--}}
                        </dt>

                        <input class="flex-shrink appearance-none w-8 px-3
                                py-2 border border-gray-300 rounded-md
                                shadow-sm placeholder-gray-400
                                focus:outline-none focus:ring-indigo-500
                                focus:border-indigo-500 sm:text-sm" type="file" name="imgHeader" id="imgHeader">

                        <span class="flex justify-center ml-4
                                flex-shrink-0">
                            <button id="save" class="bg-white rounded-md
                                    font-medium
                                    text-indigo-600 hover:text-indigo-500
                                    focus:outline-none focus:ring-2
                                    focus:ring-offset-2 focus:ring-indigo-500">
                                Save
                            </button>
                        </span>
                        </dd>
                    </div>
                </form>
            </dl>
        </div>
    </div>
</div>